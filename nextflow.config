params {

    // Input Options
    sample = null
    reference = null
    prefix_genome = null
    uri = null
    outdir = null
}

wave {
    enabled = true
    strategy = ['dockerfile','container']
}

process {
    resourceLimits = [ cpus: 8, memory: 30.GB, time: 1.h ]
}

docker {
        enabled = true 
    }

process {
    debug = true
    containerOptions = "--user root"
}

workDir = 'work'

// Load base.config by default for all pipelines
includeConfig 'conf/base.config'