params {

    // Input Options
    sample = null
    reference = null
    prefix_genome = null
    
    // Compute Resource Ceiling 
    max_memory = '8'
    max_cpus = '4'
    max_time = '2h'

}

docker {
        enabled = true
        platform = 'linux/amd64'
    }

process {
    debug = true
    containerOptions = "--user root"
}

// Load base.config by default for all pipelines
includeConfig 'conf/base.config'